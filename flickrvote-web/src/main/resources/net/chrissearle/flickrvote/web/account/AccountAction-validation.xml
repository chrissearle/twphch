<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="twitter">
        <field-validator type="requiredstring" short-circuit="true">
            <message key="account.twitter.missing.message"/>
        </field-validator>
        <field-validator type="twitterexists">
            <message key="account.twitter.not.found.message"/>
        </field-validator>
    </field>
</validators>
