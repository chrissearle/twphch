<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="flickrRss" extends="struts-default" namespace="/rss">
        <action name="hallOfFame" class="net.chrissearle.flickrvote.web.HallOfFameAction" method="executeRss">
            <result name="rss">/jsp/rss/halloffame.jspx</result>
        </action>
        <action name="current" class="net.chrissearle.flickrvote.web.CurrentChallengeAction" method="executeRss">
            <result name="rss">/jsp/rss/current.jspx</result>
        </action>
    </package>
</struts>
