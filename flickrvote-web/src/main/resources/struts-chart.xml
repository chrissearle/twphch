<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="flickrChart" extends="jfreechart-default" namespace="/chart">
        <action name="showChart" class="net.chrissearle.flickrvote.web.chart.ShowChartAction">
            <result name="success" type="chart">
                <param name="value">chart</param>
                <param name="type">png</param>
                <param name="width">500</param>
                <param name="height">1000</param>
            </result>
        </action>

        <action name="showPhotographerChart" class="net.chrissearle.flickrvote.web.chart.ShowPhotograperChartAction">
            <result name="success" type="chart">
                <param name="value">chart</param>
                <param name="type">png</param>
                <param name="width">500</param>
                <param name="height">1000</param>
            </result>
        </action>

        <action name="showVotingChart" class="net.chrissearle.flickrvote.web.chart.ShowVotingChartAction">
            <result name="success" type="chart">
                <param name="value">chart</param>
                <param name="type">png</param>
                <param name="width">500</param>
                <param name="height">1000</param>
            </result>
        </action>
    </package>
</struts>
