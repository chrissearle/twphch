<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="flickrVoteVote" extends="struts-default" namespace="/vote">
        <interceptors>
            <interceptor name="authenticationInterceptor"
                         class="net.chrissearle.flickrvote.web.interceptors.AuthenticationAuthInterceptor"/>

            <interceptor-stack name="authenticationStack">
                <interceptor-ref name="authenticationInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="authenticationStack"/>

        <global-results>
            <result name="notloggedin" type="redirectAction">showVoteResult</result>
        </global-results>

        <action name="voteForm" class="net.chrissearle.flickrvote.web.vote.VoteAction" method="input">
            <result name="input">/jsp/vote/vote.jspx</result>
            <result name="alreadyVoted" type="redirectAction">showVotePhotos</result>
        </action>
        <action name="showVotePhotos" class="net.chrissearle.flickrvote.web.vote.VoteAction" method="list">
            <interceptor-ref name="defaultStack"/>
            <result name="list">/jsp/vote/list.jspx</result>
        </action>
        <action name="vote" class="net.chrissearle.flickrvote.web.vote.VoteAction">
            <result name="success" type="chain">showVotePhotos</result>
            <result name="input">/jsp/vote/vote.jspx</result>
        </action>
        <action name="showVoteResult" class="net.chrissearle.flickrvote.web.vote.ShowVoteResultAction">
            <interceptor-ref name="defaultStack"/>
            <result>/jsp/vote/showvorteresult.jspx</result>
        </action>
    </package>
</struts>
