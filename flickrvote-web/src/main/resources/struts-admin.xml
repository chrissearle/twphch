<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="flickrVoteAdmin" extends="struts-default" namespace="/admin">
        <interceptors>
            <interceptor name="authenticationInterceptor"
                         class="net.chrissearle.flickrvote.web.interceptors.AuthenticationInterceptor"/>

            <interceptor-stack name="authenticationStack">
                <interceptor-ref name="authenticationInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="authenticationStack"/>

        <global-results>
            <result name="notloggedin">/jsp/admin/notLoggedIn.jspx</result>
            <result name="notadmin">/jsp/admin/noAccess.jspx</result>
        </global-results>

        <action name="challenges" class="net.chrissearle.flickrvote.web.admin.ChallengesAction">
            <result>/jsp/admin/challenges.jspx</result>
        </action>

        <action name="getPhotographerForm">
            <result>/jsp/admin/getPhotographer.jspx</result>
        </action>

        <action name="getImageForm">
            <result>/jsp/admin/getImage.jspx</result>
        </action>

        <action name="newChallengeForm">
            <result>/jsp/admin/newChallenge.jspx</result>
        </action>

        <action name="getPhotographer" class="net.chrissearle.flickrvote.web.admin.RetrievePhotographerAction">
            <result name="input">/jsp/admin/getPhotographer.jspx</result>
            <result name="success" type="redirectAction">challenges</result>
            <result name="error">/jsp/admin/error.jspx</result>
        </action>

        <action name="getImage" class="net.chrissearle.flickrvote.web.admin.RetrieveImageAction">
            <result name="input">/jsp/admin/getImage.jspx</result>
            <result name="success" type="redirectAction">challenges</result>
            <result name="error">/jsp/admin/error.jspx</result>
        </action>

        <action name="createChallenge" class="net.chrissearle.flickrvote.web.admin.CreateChallengeAction">
            <result name="input">/jsp/admin/newChallenge.jspx</result>
            <result name="success" type="redirectAction">challenges</result>
        </action>
    </package>
</struts>
