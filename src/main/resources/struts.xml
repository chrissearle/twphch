<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="flickrVote" extends="struts-default">
        <interceptors>
            <interceptor name="flickrAuthenticationInterceptor"
                         class="net.chrissearle.flickrvote.web.FlickrAuthInterceptor"/>

            <interceptor-stack name="flickrVoteStack">
                <interceptor-ref name="flickrAuthenticationInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>

        </interceptors>

        <default-interceptor-ref name="flickrVoteStack"/>

        <action name="index" class="net.chrissearle.flickrvote.web.WelcomeAction">
            <result>/jsp/index.jspx</result>
        </action>
        <action name="list" class="net.chrissearle.flickrvote.web.ShowChallengeImagesAction">
            <result>/jsp/showChallengeImages.jspx</result>
        </action>
        <action name="frob" class="net.chrissearle.flickrvote.web.FlickrCallbackAction">
        </action>
    </package>
</struts>
